<section class="wpo-portfolio-section section-padding">
  <div class="container-fluid">
    <div class="row">
      <div class="col col-xs-12">
        <div class="wpo-section-title">
          <h2>Kegiatan</h2>
        </div>
      </div>
    </div>
    <div class="sortable-gallery">
      <div class="gallery-filters"></div>
      <div class="row">
        <div class="col-lg-12">
          <div class="gallery-grids gallery-container clearfix">
            <% [1, 2, 3, 4, 5, 6].forEach(activity => { %>
            <div class="grid">
              <div class="grid-img">
                <img
                  src="/assets/images/activity/<%= activity %>.jpeg"
                  alt="image activity"
                />
                <div class="grid-text">
                  <h3>
                    <a href="#">Transaction Processing</a>
                  </h3>
                  <span>Data Protection</span>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
