<div>
  <div class="d-flex justify-content-between align-items-center mb-5">
    <a href="/panel/location"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>
    <h4>Tambah Kategori</h4>
  </div>

  <div class="row">
    <div class="col-12 col-md-6 card p-4">
      <form
        action="<%= location && location.id ? `/panel/location/update/${location.id}` : '/panel/location/save' %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="row mb-3">
          <div class="col-12">
            <label for="thumbnail">Foto</label>
            <input
              type="file"
              name="thumbnail"
              class="form-control mb-3"
              id="thumbnail"
              accept="image/*"
            />
          </div>
          <div class="col-12 mb-3">
            <label for="name">Nama</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="name"
              placeholder="Nama"
              value="<%= location?.name %>"
              required
            />
          </div>
        </div>
        <div class="">
          <button type="submit" class="theme-btn-sm w-100">
            <%= type == "create" ? "Tambah" : "Edit" %>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
