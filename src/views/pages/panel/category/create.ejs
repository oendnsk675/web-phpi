<div>
  <div class="d-flex justify-content-between align-items-center mb-5">
    <a href="/panel/category"
      ><i class="fa fa-chevron-left" aria-hidden="true"></i
    ></a>
    <h4>Tambah Kategori</h4>
  </div>

  <div class="card p-4">
    <form
      action="<%= category && category.id ? `/panel/category/update/${category.id}` : '/panel/category/save' %>"
      method="post"
    >
      <div class="row mb-3">
        <div class="col-12 mb-3">
          <label for="name">Nama</label>
          <input
            type="text"
            name="name"
            class="form-control"
            id="name"
            placeholder="Nama"
            value="<%= category?.name %>"
            required
          />
        </div>
        <div class="col-12 mb-3">
          <label for="description">Deskripsi</label>
          <textarea
            name="description"
            class="form-control"
            id="description"
            placeholder="Deskripsi"
            rows="3"
          >
<%= category?.description %></textarea
          >
        </div>
      </div>
      <div class="">
        <button type="submit" class="theme-btn-sm w-100">
          <%= type == "create" ? "Tambah" : "Edit" %>
        </button>
      </div>
    </form>
  </div>
</div>
