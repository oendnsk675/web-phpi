<div>
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h4>Members</h4>

    <a href="/panel/members/create">
      <button class="theme-btn-sm">Tambah User</button>
    </a>
  </div>

  <div class="card p-4">
    <table id="dataTables" class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col">Nama</th>
          <th scope="col">No Telpon</th>
          <th scope="col">Status</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= user.email %></td>
          <td><%= user.nama %></td>
          <td><%= user.no_telp %></td>
          <td>
            <span
              class="badge rounded-pill <%= user.status == 'active' ? 'bg-success' : 'bg-danger' %>"
              ><%= user.status %></span
            >
          </td>
          <td class="d-flex flex-column gap-2">
            <a
              class="btn btn-sm btn-primary"
              href="/panel/members/edit/<%= user.id %>"
              >Edit</a
            >
            <% if (user.status == 'inactive') { %>
            <a
              class="btn btn-sm btn-success"
              href="/panel/members/verify/<%= user.id %>"
              >Verifikasi</a
            >
            <%} else { %>
            <a
              class="btn btn-sm btn-warning"
              href="/panel/members/suspend/<%= user.id %>"
              >Suspend</a
            >
            <% } %>
            <a
              class="btn btn-sm btn-danger"
              href="/panel/members/<%= user.id %>/delete"
              >Hapus</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
