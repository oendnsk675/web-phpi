<div class="page-wrapper">
  <!-- start preloader -->
  <%- include('../components/ui/preloader') %>
  <!-- end preloader -->
  <!-- Start header -->
  <%- include('../components/ui/header') %>
  <!-- end of header -->
  <!-- .team-pg-area start -->
  <div class="team-pg-area section-padding">
    <div class="container">
      <div class="team-info-wrap">
        <div class="row">
          <div class="col-lg-6">
            <div class="team-info-img relative">
              <% if (user.photo) { %>
              <img src="<%= user.photo %>" alt="" />
              <% } else { %>
              <img src="/assets/images/at-single.jpg" alt="" />
              <% } %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="team-info-text">
              <div class="d-flex justify-content-between align-items-center">
                <span
                  class="fst-italic <%= user.status == 'active' ? 'text-success' : 'text-danger' %>"
                  style="font-size: smaller"
                >
                  <% if (user.status == 'active') { %>
                  <i class="fa fa-times-circle" aria-hidden="true"></i>
                  <% } else {%>
                  <i class="fa fa-check-circle" aria-hidden="true"></i>
                  <% } %>
                  <%= user.status === 'active' ? 'Identity verified' : 'Identity not verified' %>
                </span>

                <div
                  role="button"
                  class="text-info mb-2"
                  data-bs-toggle="modal"
                  data-bs-target="#cardMemberModal"
                >
                  Lihat Kartu Member
                </div>
              </div>
              <div class="name-tag">
                <h2><%= user.nama %></h2>
                <input type="hidden" id="qr-url" value="<%= user.qr_url %>" />
                <div
                  role="button"
                  data-bs-toggle="modal"
                  data-bs-target="#qrcodeModal"
                  class="qr-container"
                  id="qr-container"
                ></div>
                <%- include('../components/partials/profile/modal') %>
              </div>
              <ul>
                <li>
                  Email:<span><%= user.email %></span>
                </li>
                <li>
                  No HP:<span><%= user.phone %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="exprience-area">
        <div class="row">
          <div class="col-lg-12">
            <div class="exprience-wrap">
              <h2>Personal Experience</h2>
              <%- user.experience %>
            </div>
            <div class="education-area ex-wiget">
              <h2>Education</h2>
              <%- user.educations %>
            </div>
            <div class="language-area ex-wiget">
              <h2>Language</h2>
              <ol>
                <% user.languages.forEach(language => { %>
                <li><%= language.language %></li>
                <% }) %>
              </ol>
            </div>
            <!-- products -->
            <section class="wpo-shop-section section-padding pt-5">
              <h1 class="mb-5">User Products</h1>
              <div class="">
                <div class="row">
                  <div class="col col-xs-12">
                    <div class="shop-grids clearfix">
                      <% products.forEach(product => { %>
                      <a href="/products/<%= product.id %>">
                        <div class="grid">
                          <div class="img-holder">
                            <img
                              src="<%= product.banners.length > 0 ? product.banners[0] : '/assets/images/shop/1.jpg'%> "
                              alt="image"
                            />
                          </div>
                          <div class="details">
                            <h3>
                              <a href="/products/<%= product.id %>"
                                ><%= product.name %></a
                              >
                            </h3>
                            <span><%= product.price %></span>
                            <div class="add-to-cart">
                              <a href="/products/<%= product.id %>">Detail</a>
                            </div>
                          </div>
                        </div>
                      </a>
                      <% }) %>
                    </div>
                    <div class="pagination-wrapper pagination-wrapper-center">
                      <ul class="pg-pagination">
                        <% if (page != 1) { %>
                        <li>
                          <a href="?page=<%= page - 1 %>" aria-label="Previous">
                            <i class="ti-angle-left"></i>
                          </a>
                        </li>
                        <% } %>
                        <% for( let index = 1; index <= totalPage; index++ ) { %>
                        <li class="<%= page == index ? 'active' : '' %>">
                          <a href="?page=<%= index %>"><%= index %></a>
                        </li>
                        <% } %>
                        <% if (page < totalPage) { %>
                        <li>
                          <a href="?page=<%= page + 1 %>" aria-label="Next">
                            <i class="ti-angle-right"></i>
                          </a>
                        </li>
                        <% } %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <!-- end container -->
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
