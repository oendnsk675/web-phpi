<div>
  <div class="d-flex justify-content-between align-items-center mb-5">
    <a href="/admin/members"
      ><i class="fa fa-chevron-left" aria-hidden="true"></i
    ></a>
    <h4>Tambah User</h4>
  </div>

  <div class="card p-4">
    <form action="/admin/members/save" method="post">
      <div class="row mb-3">
        <div class="col-6 mb-3">
          <label for="inputEmail4">Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            id="inputEmail4"
            placeholder="Email"
            required
          />
        </div>
        <div class="col-6 mb-3">
          <label for="name">Nama</label>
          <input
            type="text"
            name="nama"
            class="form-control"
            id="name"
            placeholder="Nama"
            required
          />
        </div>
        <div class="col-12 mb-3">
          <label for="phone">NO Telpon</label>
          <input
            type="tel"
            name="no_telp"
            class="form-control"
            id="phone"
            placeholder="NO Telpon"
            required
          />
        </div>
        <div class="col-12 mb-3">
          <label for="inputPassword4">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="inputPassword4"
            placeholder="Password"
            required
          />
        </div>
      </div>
      <div class="">
        <button type="submit" class="theme-btn-sm w-100">Tambah</button>
      </div>
    </form>
  </div>
</div>
